{
  "manifest_version": 3,
  "name": "Strava Kudoser",
  "description": "Automate Strava Kudos Clicks",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.jpeg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon48.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["https://www.strava.com/dashboard*"],
      "js": ["content.js"]
    }
  ]
}
